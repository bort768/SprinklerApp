<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SprinklerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SprinklerApp"
    xmlns:view="clr-namespace:SprinklerApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="SprinklerApp">

    <FlyoutItem Title="Weather">
        <ShellContent ContentTemplate="{DataTemplate view:WeatherView}" />
    </FlyoutItem>

    <FlyoutItem Title="Tank Info">
        <ShellContent ContentTemplate="{DataTemplate view:TankView}"/>
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate view:SettingsView}" />
    </FlyoutItem>

</Shell>
